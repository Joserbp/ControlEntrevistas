            </div>
            <div class="modal-body">
                <p>@ViewBag.Mensaje</p>
            </div>
            <div class="modal-footer">
                <a class="btn btn-success" asp-controller="Cita" asp-action="Form">Regresar</a>
            </div>
        </div>
    </div>
</div>

<script>
    $("#modal").modal('show')
</script>